    <script>
        // --- Shared Database Functions ---
        function getDatabase() {
            const dbString = localStorage.getItem('app_database_v2');
            if (dbString) { return JSON.parse(dbString); }
            return {
                users: {}, withdrawals: [], supportTickets: [],
                settings: { adPrice: 0.5, minWithdraw: 50, noticeText: "‡¶Ö‡ßç‡¶Ø‡¶æ‡¶™‡ßá ‡¶∏‡ßç‡¶¨‡¶æ‡¶ó‡¶§‡¶Æ!", withdrawStatus: "enabled" }
            };
        }
        function saveDatabase(db) { localStorage.setItem('app_database_v2', JSON.stringify(db)); }

        // --- User Logic ---
        let currentUserId = null;
        let tg = window.Telegram.WebApp;
        tg.ready();
        
        document.addEventListener('DOMContentLoaded', () => {
            initializeUser();
            setupTheme();
        });

        function initializeUser() {
            const tgUser = tg.initDataUnsafe?.user;

            if (tgUser) {
                currentUserId = `@${tgUser.username}` || `id_${tgUser.id}`;
                localStorage.setItem('currentUserId', currentUserId);
                
                // ‡¶®‡¶§‡ßÅ‡¶®: ‡¶¨‡ßç‡¶Ø‡¶¨‡¶π‡¶æ‡¶∞‡¶ï‡¶æ‡¶∞‡ßÄ‡¶∞ ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶õ‡¶¨‡¶ø ‡¶∏‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
                if (tgUser.photo_url) {
                    document.getElementById('user-profile-pic').src = tgUser.photo_url;
                }

            } else {
                currentUserId = localStorage.getItem('currentUserId');
                 if (!currentUserId) {
                    document.body.innerHTML = `<h1 style="color:orange; text-align:center; padding-top: 50px;">‡¶Ö‡¶®‡ßÅ‡¶ó‡ßç‡¶∞‡¶π ‡¶ï‡¶∞‡ßá ‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ ‡¶¨‡¶ü ‡¶•‡ßá‡¶ï‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶™‡¶ü‡¶ø ‡¶ñ‡ßÅ‡¶≤‡ßÅ‡¶®‡•§</h1>`;
                    return;
                }
            }
           
            let db = getDatabase();

            if (!db.users[currentUserId]) {
                db.users[currentUserId] = {
                    id: currentUserId,
                    displayName: tgUser?.first_name || `Guest`,
                    watchedAds: 0, points: 0.0, isBanned: false,
                    createdAt: new Date().toISOString()
                };
                saveDatabase(db);
            }
            
            const user = db.users[currentUserId];
            if (user && user.isBanned) {
                document.body.innerHTML = `<h1 style="color:red; text-align:center; padding-top: 50px;">‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü‡¶ü‡¶ø ‡¶®‡¶ø‡¶∑‡¶ø‡¶¶‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§</h1>`;
                return;
            }
            updateUI();
        }

        function updateUI() {
            const db = getDatabase();
            if (!currentUserId || !db.users[currentUserId]) { clearMyData(); return; }
            const user = db.users[currentUserId];
            
            document.getElementById('user-display-name').textContent = user.displayName;
            document.getElementById('telegram-id-top').textContent = user.id;
            document.getElementById('watched-ads').textContent = user.watchedAds;
            document.getElementById('earned-points').textContent = user.points.toFixed(2);
            document.getElementById('notice-text').textContent = db.settings.noticeText;
        }

        async function watchAd() {
            const adButton = document.getElementById('watch-ad-btn');
            adButton.disabled = true;
            adButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ‡¶≤‡ßã‡¶° ‡¶π‡¶ö‡ßç‡¶õ‡ßá...';
            
            let db = getDatabase();
            const adPrice = db.settings.adPrice;

            const grantPoints = () => {
                db = getDatabase();
                db.users[currentUserId].watchedAds += 1;
                db.users[currentUserId].points += adPrice;
                saveDatabase(db); updateUI();
            };
            
            if (typeof show_9523265 === 'function') {
                try {
                    await show_9523265(); grantPoints();
                } catch (error) {
                    console.error("Ad failed:", error); alert("‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶™‡¶® ‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ ‡¶Ø‡¶æ‡ßü‡¶®‡¶ø‡•§");
                } finally { adButton.disabled = false; adButton.innerHTML = '‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶™‡¶® ‡¶¶‡ßá‡¶ñ‡ßÅ‡¶®'; }
            } else {
                console.warn("Ad SDK not found. Simulating.");
                setTimeout(() => { grantPoints(); adButton.disabled = false; adButton.innerHTML = '‡¶¨‡¶ø‡¶ú‡ßç‡¶û‡¶æ‡¶™‡¶® ‡¶¶‡ßá‡¶ñ‡ßÅ‡¶®'; }, 1000);
            }
        }

        function withdrawPoints() {
            let db = getDatabase();
            if (db.settings.withdrawStatus === 'disabled') { alert("‡¶¶‡ßÅ‡¶É‡¶ñ‡¶ø‡¶§, ‡¶â‡¶§‡ßç‡¶§‡ßã‡¶≤‡¶® ‡¶∏‡¶ø‡¶∏‡ßç‡¶ü‡ßá‡¶Æ ‡¶∏‡¶æ‡¶Æ‡ßü‡¶ø‡¶ï‡¶≠‡¶æ‡¶¨‡ßá ‡¶¨‡¶®‡ßç‡¶ß ‡¶Ü‡¶õ‡ßá‡•§"); return; }
            const phone = document.getElementById('withdraw-phone').value;
            const amount = parseFloat(document.getElementById('withdraw-amount').value);
            const userPoints = db.users[currentUserId].points;
            const minWithdraw = db.settings.minWithdraw;

            if (!phone || !amount) { alert("‡¶∏‡¶ï‡¶≤ ‡¶§‡¶•‡ßç‡¶Ø ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§"); return; }
            if (amount < minWithdraw) { alert(`‡¶®‡ßç‡¶Ø‡ßÇ‡¶®‡¶§‡¶Æ ${minWithdraw} ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü ‡¶â‡¶§‡ßç‡¶§‡ßã‡¶≤‡¶® ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá‡¶®‡•§`); return; }
            if (amount > userPoints) { alert("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶™‡¶∞‡ßç‡¶Ø‡¶æ‡¶™‡ßç‡¶§ ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü ‡¶®‡ßá‡¶á!"); return; }

            db.users[currentUserId].points -= amount;
            db.withdrawals.push({
                id: 'wd_' + Date.now(), userId: currentUserId, method: document.getElementById('payment-method').value,
                phone: phone, amount: amount, status: 'pending', date: new Date().toISOString()
            });
            saveDatabase(db);
            updateUI();
            alert(`‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ${amount} ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü ‡¶â‡¶§‡ßç‡¶§‡ßã‡¶≤‡¶®‡ßá‡¶∞ ‡¶Ö‡¶®‡ßÅ‡¶∞‡ßã‡¶ß ‡¶™‡¶æ‡¶†‡¶æ‡¶®‡ßã ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§`);
            toggleSection('withdraw-section');
        }

        function submitSupportRequest() {
            const type = document.getElementById('problem-type').value;
            const description = document.getElementById('problem-description').value;
            if (!type || !description) { alert("‡¶´‡¶∞‡ßç‡¶Æ‡¶ü‡¶ø ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§"); return; }
            let db = getDatabase();
            db.supportTickets.push({
                id: 'tkt_' + Date.now(), userId: currentUserId, type: type,
                description: description, status: 'open', date: new Date().toISOString()
            });
            saveDatabase(db);
            alert("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶Ö‡¶®‡ßÅ‡¶∞‡ßã‡¶ß ‡¶ú‡¶Æ‡¶æ ‡¶¶‡ßá‡¶ì‡ßü‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§");
            toggleSection('support-section');
        }

        function renderHistory() {
            const db = getDatabase();
            const historyList = document.getElementById('history-list');
            const userWithdrawals = db.withdrawals.filter(w => w.userId === currentUserId).reverse();
            
            if (userWithdrawals.length === 0) {
                historyList.innerHTML = '<p style="text-align:center; color: var(--text-secondary);">‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶ï‡ßã‡¶®‡ßã ‡¶π‡¶ø‡¶∏‡ßç‡¶ü‡ßç‡¶∞‡¶ø ‡¶®‡ßá‡¶á‡•§</p>';
                return;
            }

            let html = '';
            userWithdrawals.forEach(w => {
                let statusClass = `status-${w.status.toLowerCase()}`;
                html += `<div class="history-item">
                    <div class="history-details">
                        <p>${w.amount.toFixed(2)} ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü - ${w.method} (${w.phone})</p>
                        <small>${new Date(w.date).toLocaleString('bn-BD')}</small>
                    </div>
                    <div class="history-status ${statusClass}">${w.status.toUpperCase()}</div>
                </div>`;
            });
            historyList.innerHTML = html;
        }

        // --- ‡¶®‡¶§‡ßÅ‡¶® ‡¶è‡¶¨‡¶Ç ‡¶™‡¶∞‡¶ø‡¶¨‡¶∞‡ßç‡¶§‡¶ø‡¶§ ‡¶´‡¶æ‡¶Ç‡¶∂‡¶® ---
        function shareOnTelegram() {
            const text = '‡¶è‡¶á ‡¶Ö‡¶∏‡¶æ‡¶ß‡¶æ‡¶∞‡¶£ ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶™‡¶ü‡¶ø ‡¶¶‡ßá‡¶ñ‡ßÅ‡¶® ‡¶è‡¶¨‡¶Ç ‡¶™‡ßü‡ßá‡¶®‡ßç‡¶ü ‡¶Ü‡ßü ‡¶ï‡¶∞‡ßÅ‡¶®! ü§ë ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ‡¶¶‡ßá‡¶∞ ‡¶∞‡ßá‡¶´‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßá ‡¶Ü‡¶∞‡¶ì ‡¶¨‡ßá‡¶∂‡¶ø ‡¶Ü‡ßü ‡¶ï‡¶∞‡ßÅ‡¶®‡•§';
            const url = window.location.href; // ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶ì‡ßü‡ßá‡¶¨ ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶™‡ßá‡¶∞ ‡¶≤‡¶ø‡¶ô‡ßç‡¶ï
            // ‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ‡ßá‡¶∞ ‡¶®‡¶ø‡¶ú‡¶∏‡ßç‡¶¨ ‡¶∂‡ßá‡ßü‡¶æ‡¶∞ ‡¶≤‡¶ø‡¶ô‡ßç‡¶ï ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ
            const shareUrl = `https://t.me/share/url?url=${encodeURIComponent(url)}&text=${encodeURIComponent(text)}`;
            // ‡¶ü‡ßá‡¶≤‡¶ø‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ‡ßá‡¶∞ ‡¶∂‡ßá‡ßü‡¶æ‡¶∞ ‡¶â‡¶á‡¶®‡ßç‡¶°‡ßã ‡¶ñ‡ßã‡¶≤‡¶æ
            tg.openTelegramLink(shareUrl);
        }
        
        function showReferral() {
            const user = getDatabase().users[currentUserId];
            if (user) {
                const referralId = user.id;
                prompt("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¨‡¶®‡ßç‡¶ß‡ßÅ‡¶¶‡ßá‡¶∞ ‡¶∏‡¶æ‡¶•‡ßá ‡¶∞‡ßá‡¶´‡¶æ‡¶∞‡ßá‡¶≤ ‡¶Ü‡¶á‡¶°‡¶ø ‡¶∂‡ßá‡ßü‡¶æ‡¶∞ ‡¶ï‡¶∞‡ßÅ‡¶®:", referralId);
            }
        }

        function clearMyData() { if (confirm("‡¶Ü‡¶™‡¶®‡¶ø ‡¶ï‡¶ø ‡¶®‡¶ø‡¶∂‡ßç‡¶ö‡¶ø‡¶§ ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶°‡ßá‡¶ü‡¶æ ‡¶Æ‡ßÅ‡¶õ‡ßá ‡¶´‡ßá‡¶≤‡¶§‡ßá ‡¶ö‡¶æ‡¶®?")) { localStorage.clear(); window.location.reload(); } }
        function toggleSection(sectionId) {
            if (sectionId === 'history-section') renderHistory();
            document.querySelectorAll('.hidden-section').forEach(s => {
                if (s.id === sectionId) s.style.display = (s.style.display !== 'block') ? 'block' : 'none';
                else s.style.display = 'none';
            });
        }
        function setupTheme() { const btn = document.getElementById('theme-toggle-btn'); const load = () => { if (localStorage.getItem('theme') === 'light') { document.body.classList.add('light-mode'); btn.innerHTML = '<i class="fas fa-sun"></i>'; } else { document.body.classList.remove('light-mode'); btn.innerHTML = '<i class="fas fa-moon"></i>'; } }; btn.addEventListener('click', () => { document.body.classList.toggle('light-mode'); localStorage.setItem('theme', document.body.classList.contains('light-mode') ? 'light' : 'dark'); load(); }); load(); }
    </script>
</body>
</html>
